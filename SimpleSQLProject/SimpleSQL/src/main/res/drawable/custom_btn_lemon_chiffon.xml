 <?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#FFB90F" />
             <gradient  android:angle="-90"  android:startColor="#FFB90F" android:endColor="#FFB90F"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#FFFAFA" />
             <solid  android:color="#FFFAFA"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#FFFAFA" />
             <gradient  android:angle="-90"  android:startColor="#FFFAFA" android:endColor="#FFFAFA" />            
         </shape>
     </item>
</selector>
