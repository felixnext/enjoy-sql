 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

        <Button
            android:id="@+id/button2"
            style="@style/btnStylelemon_chiffon"
            android:layout_width="135dp"
            android:layout_height="120dp"
            android:layout_marginTop="80dp"
            android:drawableLeft="@drawable/icon_difficulty"
            android:text="Diffi-culty"
            android:textColor="@color/black" />

        <Button 
            android:id="@+id/button1"
            style="@style/btnStylelemon_chiffon"
            android:layout_width="135dp"
            android:layout_height="120dp"
            android:layout_alignTop="@+id/button2"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/button2"
            android:drawableLeft="@drawable/icon_upload"
            android:text="Story-upload"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button4"
            style="@style/btnStylelemon_chiffon"
            android:layout_width="135dp"
            android:layout_height="120dp"
            android:layout_alignLeft="@+id/button1"
            android:layout_alignRight="@+id/button1"
            android:layout_below="@+id/button1"
            android:layout_marginTop="31dp"
            android:drawableLeft="@drawable/icon_language"
            android:text="Lan-guage"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button3"
            style="@style/btnStylelemon_chiffon"
            android:layout_width="135dp"
            android:layout_height="120dp"
            android:layout_alignTop="@+id/button4"
            android:layout_toLeftOf="@+id/button1"
            android:drawableLeft="@drawable/icon_profile"
            android:text="Profile"
            android:textColor="@color/black" />

</RelativeLayout>