 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="16dp"
    android:paddingRight="40dp" 
    android:background = "@color/black" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/checkBox1"
            android:layout_alignRight="@+id/textView1"
            android:layout_alignTop="@+id/checkBox1"
            android:layout_marginRight="14dp"
            android:text="10 Gold"
            android:textColor="@color/yellow" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/checkBox2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignTop="@+id/checkBox2"
            android:text="10 Gold"
            android:textColor="@color/yellow" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/checkBox3"
            android:textColor="@color/yellow"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignTop="@+id/checkBox3"
            android:text="25 Gold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/checkBox4"
            android:textColor="@color/yellow"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignTop="@+id/checkBox4"
            android:text="30 Gold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:text="Amount of Gold:"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:text="100 Gold"
            android:textColor="@color/yellow"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Please select the statements you want to buy:"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="21dp"
            android:text="Where"
            android:textColor="@color/white" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkBox1"
            android:layout_below="@+id/checkBox1"
            android:layout_marginTop="16dp"
            android:text="Having"
            android:textColor="@color/white" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkBox2"
            android:layout_below="@+id/checkBox2"
            android:layout_marginTop="14dp"
            android:text="Join"
            android:textColor="@color/white" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkBox3"
            android:layout_below="@+id/checkBox3"
            android:layout_marginTop="14dp"
            android:text="Group By"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button1"
            style="@style/btnStylelemon_chiffon"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/textView5"
            android:drawableLeft="@drawable/icon_gold"
            android:text="Buy"
            android:textColor="@color/black" />

</RelativeLayout>