<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:paddingLeft="16dp"
    android:paddingRight="40dp" >

    <RadioButton
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="47dp"
        android:text="Final Fantasy"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <RadioButton
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView03"
        android:layout_below="@+id/TextView03"
        android:layout_marginTop="44dp"
        android:text="Bond"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <ProgressBar
        android:id="@+id/ProgressBar02"
        style="@style/customprogressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignRight="@+id/TextView01"
        android:layout_below="@+id/textView6"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="14dp"
        android:textColor="@color/black" 
        android:minHeight="15dp"
        android:minWidth="25dp"
        android:progress="0" />

    <ProgressBar
        android:id="@+id/ProgressBar03"
        style="@style/customprogressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_alignRight="@+id/TextView01"
        android:layout_below="@+id/TextView01"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="14dp"
        android:textColor="@color/black" 
        android:minHeight="15dp"
        android:minWidth="25dp"
        android:progress="0" />

    <RadioButton
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="66dp"
        android:text="Star Wars"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <ProgressBar
        android:id="@+id/ProgressBar01"
        style="@style/customprogressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignRight="@+id/ProgressBar02"
        android:layout_below="@+id/TextView03"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="19dp"
        android:textColor="@color/black" 
        android:minHeight="15dp"
        android:minWidth="25dp"
        android:progress="0" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ProgressBar02"
        android:layout_alignRight="@+id/TextView03"
        android:layout_marginRight="23dp"
        android:background="#00000000"
        android:max="100"
        android:text="0%" />

    <TextView
        android:id="@+id/TextView06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ProgressBar01"
        android:layout_alignLeft="@+id/textView15"
        android:background="#00000000"
        android:max="100"
        android:text="0%" />

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ProgressBar03"
        android:layout_alignLeft="@+id/textView15"
        android:background="#00000000"
        android:max="100"
        android:text="0%" />

    <Button
        android:id="@+id/button1"
        style="@style/btnStylelemon_chiffon"
        android:layout_width="135dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/ProgressBar03"
        android:layout_alignRight="@+id/ProgressBar03"
        android:layout_below="@+id/ProgressBar03"
        android:layout_marginTop="27dp"
        android:drawableLeft="@drawable/icon_daumen"
        android:text="Start game"
        android:textColor="@color/black" />
    
</RelativeLayout>