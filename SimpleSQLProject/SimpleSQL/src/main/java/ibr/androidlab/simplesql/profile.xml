<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

 
   <Spinner
        android:id="@+id/spinner1"
        style="@style/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:entries="@array/country_arrays"
        android:prompt="@string/country_prompt" />
   
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="29dp"
        android:text="Beginner Level"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actual titles: "
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="55dp"
        android:text="Amount of gold:"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="@style/customprogressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignRight="@+id/textView5"
        android:minHeight="15dp"
        android:minWidth="25dp"
        android:progress="0" />

    <ProgressBar
        android:id="@+id/ProgressBar01"
        style="@style/customprogressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextView01"
        android:layout_alignLeft="@+id/progressBar1"
        android:layout_alignRight="@+id/progressBar1"
        android:minHeight="15dp"
        android:minWidth="25dp"
        android:progress="0" />

    <ProgressBar
        android:id="@+id/ProgressBar13"
        style="@style/customprogressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextView14"
        android:layout_alignLeft="@+id/ProgressBar01"
        android:layout_alignRight="@+id/ProgressBar01"
        android:minHeight="15dp"
        android:minWidth="25dp"
        android:progress="0" />

    <TextView
        android:id="@+id/TextView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_below="@+id/TextView01"
        android:layout_marginTop="30dp"
        android:text="Master Level"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="34dp"
        android:text="Advanced Level"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ProgressBar13"
        android:layout_alignLeft="@+id/textView13"
        android:background="#00000000"
        android:max="100"
        android:text="0%" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView14"
        android:layout_alignRight="@+id/ProgressBar01"
        android:layout_marginRight="28dp"
        android:background="#00000000"
        android:max="100"
        android:text="0%" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/progressBar1"
        android:layout_alignLeft="@+id/textView13"
        android:background="#00000000"
        android:max="100"
        android:text="0%" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView6"
        android:layout_marginLeft="33dp"
        android:layout_toRightOf="@+id/textView4"
        android:text="100 Gold"
        android:textColor="@color/yellow"
        android:textSize="20sp" />

</RelativeLayout>